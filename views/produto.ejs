<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%- include('imports'); -%>
  </head>
  <body>
    <%- include('navbar'); -%>
    <div class="container">
    
    <div class="card mb-3">
    <h1 class="produtotitulo">Produtos</h1>
      <% produtos.forEach((produto) => { %>

        <div class="container ">
          
            <div class="row">
              <div class="col-sm">
                  <img src="<%= `/images/${produto.image}` %>" class="card-img" alt="...">
              </div>

              <div class="col-sm">
                <br>
                  <h3 class="card-title"><%= produto.nome %></h3>
                  <p class="card-text"><%= produto.descricao %></p>
                  <h5 class="card-title"><%= produto.preco %></h5>
              </div>

              <div class="col-sm">
                <br>
                <br>
                <br>
                  <a href=".." class="btn btn-success">Adicionar ao carrinho</a>
              </div>

            </div>
          </div>
      <% }); %>
    </div>
    </div>

    <div class="bfinalizar">
        <a href=".." class="btn btn-success">Finalizar e ir para o carrinho de compras</a>
    </div>
    
  </body>
</html>
